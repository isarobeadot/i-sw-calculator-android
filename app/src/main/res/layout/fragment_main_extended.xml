<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_body"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/layout_control_height"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:weightSum="100"
    app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_top"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorTextViewBackground"
            android:gravity="center|end"
            android:paddingLeft="@dimen/text_view_padding"
            android:paddingRight="@dimen/text_view_padding"
            android:text="@string/TextView"
            android:textColor="@color/colorTextViewText"
            android:textSize="@dimen/text_view_top_text_size" />

        <TextView
            android:id="@+id/tv_op"
            android:layout_width="@dimen/text_view_op_width"
            android:layout_height="match_parent"
            android:background="@color/colorTextViewOperationBackground"
            android:gravity="center"
            android:text="@string/equal"
            android:textColor="@color/colorTextViewOperationText"
            android:textSize="@dimen/text_view_top_text_size" />
    </LinearLayout>

    <EditText
        android:id="@+id/et_main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/button_margin"
        android:layout_marginTop="@dimen/button_margin"
        android:layout_marginRight="@dimen/button_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_weight="20"
        android:background="@color/colorTextViewBackground"
        android:gravity="center|end"
        android:importantForAutofill="no"
        android:inputType="text"
        android:paddingLeft="@dimen/text_view_padding"
        android:paddingRight="@dimen/text_view_padding"
        android:text="@string/TextView"
        android:textColor="@color/colorTextViewText"
        android:textSize="@dimen/text_view_main_text_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="12"
        android:orientation="horizontal"
        android:weightSum="5">

        <Button
            android:id="@+id/b_emptyA"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/button_margin"
            android:layout_weight="1"
            android:background="@color/colorOperationButtonBackground"
            android:enabled="false"
            android:textColor="@color/colorOperationButtonText"
            android:textSize="@dimen/button_number_text_size" />

        <Button
            android:id="@+id/b_emptyB"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/button_margin"
            android:layout_weight="1"
            android:background="@color/colorOperationButtonBackground"
            android:enabled="false"
            android:textColor="@color/colorOperationButtonText"
            android:textSize="@dimen/button_number_text_size" />

        <Button
            android:id="@+id/b_sin"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/button_margin"
            android:layout_weight="1"
            android:background="@color/colorOperationButtonBackground"
            android:text="@string/sin"
            android:textAllCaps="false"
            android:textColor="@color/colorOperationButtonText"
            android:textSize="@dimen/button_number_text_size" />

        <Button
            android:id="@+id/b_cos"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/button_margin"
            android:layout_weight="1"
            android:background="@color/colorOperationButtonBackground"
            android:text="@string/cos"
            android:textAllCaps="false"
            android:textColor="@color/colorOperationButtonText"
            android:textSize="@dimen/button_number_text_size" />

        <Button
            android:id="@+id/b_tan"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/button_margin"
            android:layout_weight="1"
            android:background="@color/colorOperationButtonBackground"
            android:text="@string/tan"
            android:textAllCaps="false"
            android:textColor="@color/colorOperationButtonText"
            android:textSize="@dimen/button_number_text_size" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="12"
        android:orientation="horizontal"
        android:weightSum="5">

        <Button
            android:id="@+id/b_emptyF"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/button_margin"
            android:layout_weight="1"
            android:background="@color/colorOperationButtonBackground"
            android:enabled="false"
            android:textColor="@color/colorOperationButtonText"
            android:textSize="@dimen/button_number_text_size" />

        <Button
            android:id="@+id/b_emptyG"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/button_margin"
            android:layout_weight="1"
            android:background="@color/colorOperationButtonBackground"
            android:enabled="false"
            android:textColor="@color/colorOperationButtonText"
            android:textSize="@dimen/button_number_text_size" />

        <Button
            android:id="@+id/b_factorial"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/button_margin"
            android:layout_weight="1"
            android:background="@color/colorOperationButtonBackground"
            android:text="@string/factorial"
            android:textAllCaps="false"
            android:textColor="@color/colorOperationButtonText"
            android:textSize="@dimen/button_number_text_size" />

        <Button
            android:id="@+id/b_parenthesisL"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/button_margin"
            android:layout_weight="1"
            android:background="@color/colorOperationButtonBackground"
            android:text="@string/parenthesisL"
            android:textAllCaps="false"
            android:textColor="@color/colorOperationButtonText"
            android:textSize="@dimen/button_number_text_size" />

        <Button
            android:id="@+id/b_parenthesisR"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/button_margin"
            android:layout_weight="1"
            android:background="@color/colorOperationButtonBackground"
            android:text="@string/parenthesisR"
            android:textAllCaps="false"
            android:textColor="@color/colorOperationButtonText"
            android:textSize="@dimen/button_number_text_size" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="12"
        android:orientation="horizontal"
        android:weightSum="5">

        <Button
            android:id="@+id/b_7"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/button_margin"
            android:layout_weight="1"
            android:background="@color/colorNumberButtonBackground"
            android:text="@string/b7"
            android:textColor="@color/colorNumberButtonText"
            android:textSize="@dimen/button_number_text_size"
            android:textStyle="" />

        <Button
            android:id="@+id/b_8"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/button_margin"
            android:layout_weight="1"
            android:background="@color/colorNumberButtonBackground"
            android:text="@string/b8"
            android:textColor="@color/colorNumberButtonText"
            android:textSize="@dimen/button_number_text_size" />

        <Button
            android:id="@+id/b_9"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/button_margin"
            android:layout_weight="1"
            android:background="@color/colorNumberButtonBackground"
            android:text="@string/b9"
            android:textColor="@color/colorNumberButtonText"
            android:textSize="@dimen/button_number_text_size" />

        <Button
            android:id="@+id/b_pow"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/button_margin"
            android:layout_weight="1"
            android:background="@color/colorOperationButtonBackground"
            android:text="@string/pow"
            android:textAllCaps="false"
            android:textColor="@color/colorOperationButtonText"
            android:textSize="@dimen/button_number_text_size" />

        <Button
            android:id="@+id/b_percent"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/button_margin"
            android:layout_weight="1"
            android:background="@color/colorOperationButtonBackground"
            android:text="@string/percent"
            android:textColor="@color/colorOperationButtonText"
            android:textSize="@dimen/button_number_text_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="12"
        android:orientation="horizontal"
        android:weightSum="5">

        <Button
            android:id="@+id/b_4"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/button_margin"
            android:layout_weight="1"
            android:background="@color/colorNumberButtonBackground"
            android:text="@string/b4"
            android:textColor="@color/colorNumberButtonText"
            android:textSize="@dimen/button_number_text_size" />

        <Button
            android:id="@+id/b_5"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/button_margin"
            android:layout_weight="1"
            android:background="@color/colorNumberButtonBackground"
            android:text="@string/b5"
            android:textColor="@color/colorNumberButtonText"
            android:textSize="@dimen/button_number_text_size" />

        <Button
            android:id="@+id/b_6"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/button_margin"
            android:layout_weight="1"
            android:background="@color/colorNumberButtonBackground"
            android:text="@string/b6"
            android:textColor="@color/colorNumberButtonText"
            android:textSize="@dimen/button_number_text_size" />

        <Button
            android:id="@+id/b_multiply"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/button_margin"
            android:layout_weight="1"
            android:background="@color/colorOperationButtonBackground"
            android:text="@string/multiply"
            android:textAllCaps="false"
            android:textColor="@color/colorOperationButtonText"
            android:textSize="@dimen/button_number_text_size" />

        <Button
            android:id="@+id/b_divide"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/button_margin"
            android:layout_weight="1"
            android:background="@color/colorOperationButtonBackground"
            android:text="@string/divide"
            android:textColor="@color/colorOperationButtonText"
            android:textSize="@dimen/button_number_text_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="12"
        android:orientation="horizontal"
        android:weightSum="5">

        <Button
            android:id="@+id/b_1"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/button_margin"
            android:layout_weight="1"
            android:background="@color/colorNumberButtonBackground"
            android:text="@string/b1"
            android:textColor="@color/colorNumberButtonText"
            android:textSize="@dimen/button_number_text_size" />

        <Button
            android:id="@+id/b_2"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/button_margin"
            android:layout_weight="1"
            android:background="@color/colorNumberButtonBackground"
            android:text="@string/b2"
            android:textColor="@color/colorNumberButtonText"
            android:textSize="@dimen/button_number_text_size" />

        <Button
            android:id="@+id/b_3"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/button_margin"
            android:layout_weight="1"
            android:background="@color/colorNumberButtonBackground"
            android:text="@string/b3"
            android:textColor="@color/colorNumberButtonText"
            android:textSize="@dimen/button_number_text_size" />

        <Button
            android:id="@+id/b_add"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/button_margin"
            android:layout_weight="1"
            android:background="@color/colorOperationButtonBackground"
            android:text="@string/add"
            android:textColor="@color/colorOperationButtonText"
            android:textSize="@dimen/button_number_text_size" />

        <Button
            android:id="@+id/b_subtract"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/button_margin"
            android:layout_weight="1"
            android:background="@color/colorOperationButtonBackground"
            android:text="@string/subtract"
            android:textColor="@color/colorOperationButtonText"
            android:textSize="@dimen/button_number_text_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="12"
        android:orientation="horizontal"
        android:weightSum="5">

        <Button
            android:id="@+id/b_empty"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/button_margin"
            android:layout_weight="1"
            android:background="@color/colorNumberButtonBackground"
            android:enabled="false"
            android:textColor="@color/colorNumberButtonBackground"
            android:textSize="@dimen/button_number_text_size" />

        <Button
            android:id="@+id/b_0"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/button_margin"
            android:layout_weight="1"
            android:background="@color/colorNumberButtonBackground"
            android:text="@string/b0"
            android:textColor="@color/colorNumberButtonText"
            android:textSize="@dimen/button_number_text_size" />

        <Button
            android:id="@+id/b_dot"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/button_margin"
            android:layout_weight="1"
            android:background="@color/colorNumberButtonBackground"
            android:text="@string/dot"
            android:textColor="@color/colorNumberButtonText"
            android:textSize="@dimen/button_number_text_size" />

        <ImageButton
            android:id="@+id/b_backspace"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/button_margin"
            android:layout_weight="1"
            android:background="@color/colorOperationButtonBackground"
            android:contentDescription="@string/backspace"
            app:srcCompat="@drawable/outline_backspace" />

        <Button
            android:id="@+id/b_equal"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/button_margin"
            android:layout_weight="1"
            android:background="@color/colorOperationButtonBackground"
            android:text="@string/equal"
            android:textColor="@color/colorOperationButtonText"
            android:textSize="@dimen/button_number_text_size" />
    </LinearLayout>

</LinearLayout>
